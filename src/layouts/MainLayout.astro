---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "FlowLearn erbjuder innovativa webbapplikationer och konsulttjänster för att förenkla och förbättra lärande i en digital värld." } = Astro.props;
---

<!DOCTYPE html>
<html lang="sv" {...({ class: "scroll-smooth" } as any)}>
  <head>
    <meta {...({ charset: "UTF-8" } as any)} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-gradient-to-b from-slate-900 to-slate-800 text-white min-h-screen">
    <header class="fixed w-full top-0 z-50 transition-colors duration-300">
      <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="flex items-center">
          <img src="/images/logo.png" alt="FlowLearn Logo" class="h-[3.0rem] w-auto" />
        </a>
        <div class="flex gap-6">
          <a href="/" class="text-slate-300 hover:text-white transition-colors">Hem</a>
          <li class="relative group">
            <a href="#" class="text-slate-300 hover:text-white transition-colors">Tjänster</a>
            <ul class="absolute left-0 hidden group-hover:block bg-slate-800 rounded-lg shadow-lg">
              <li><a href="/tjanster/ikt-pedagogik" class="block px-4 py-2 text-slate-300 hover:text-white transition-colors">IKT-Pedagogik</a></li>
              <li><a href="/tjanster/webbapplikationer" class="block px-4 py-2 text-slate-300 hover:text-white transition-colors">Webbapplikationer</a></li>
              <li><a href="/tjanster/konsulttjanster" class="block px-4 py-2 text-slate-300 hover:text-white transition-colors">Konsulttjänster</a></li>
            </ul>
          </li>
          <a href="/blogg" class="text-slate-300 hover:text-white transition-colors">Nyheter</a>
          <a href="/om-mig" class="text-slate-300 hover:text-white transition-colors">Om mig</a>
          <a href="/#kontakt" class="text-slate-300 hover:text-white transition-colors">Kontakt</a>
        </div>
      </nav>
    </header>

    <main class="pt-20">
      <slot />
    </main>

    <footer class="mt-20 border-t border-slate-700 py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
          <!-- Logga -->
          <div class="flex flex-col items-center md:items-center gap-2">
            <img src="/images/logo.png" alt="FlowLearn Logo" class="h-[4.45rem] w-auto" />
            <p class="text-slate-300 text-sm italic text-center max-w-[220px] leading-snug">Strategisk IT-rådgivning med fokus på lärande och utveckling</p>
          </div>
          
          <!-- Kontaktuppgifter -->
          <div class="flex flex-col items-center md:items-center gap-2">
            <h3 class="text-white font-semibold text-lg mb-2">Kontakta oss</h3>
            <p class="text-slate-300 text-sm">E-post: it@flowlearn.se</p>
            <p class="text-slate-300 text-sm">Telefon: 072-228 00 13</p>
          </div>
          
          <!-- Sociala medier -->
          <div class="flex flex-col items-center md:items-center gap-2">
            <h3 class="text-white font-semibold text-lg mb-2">Följ oss</h3>
            <div class="flex gap-4">
              <a href="#" class="text-slate-300 hover:text-white transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"/>
                </svg>
              </a>
              <a href="#" class="text-slate-300 hover:text-white transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
        
        <!-- Copyright och länkar längst ner -->
        <div class="border-t border-slate-700 pt-6">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <p class="text-slate-300 text-sm mb-4 md:mb-0">&copy; 2025. Alla rättigheter förbehållna.</p>
            <div class="flex gap-4">
              <a href="/integritetspolicy" class="text-slate-300 hover:text-white transition-colors text-sm">Integritetspolicy</a>
              <a href="/anvandarvillkor" class="text-slate-300 hover:text-white transition-colors text-sm">Användarvillkor</a>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
