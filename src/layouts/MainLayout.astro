---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Jag erbjuder IT-support och IKT-pedagogik för att förenkla och förbättra din digitala vardag." } = Astro.props;
---

<!DOCTYPE html>
<html lang="sv" {...({ class: "scroll-smooth" } as any)}>
  <head>
    <meta {...({ charset: "UTF-8" } as any)} />
    <meta name="viewport" content="width=device-width" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon/favicon.png" />
    
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-gradient-to-b from-slate-900 to-slate-800 text-white min-h-screen">
    <header class="fixed w-full top-0 z-50 transition-colors duration-300 bg-slate-900/80 backdrop-blur-sm">
      <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="flex items-center">
          <img src="/images/logo.png" alt="Flowlearn Logo" class="h-[3.0rem] w-auto" />
        </a>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-6">
          <a href="/" class="text-slate-300 hover:text-white transition-colors">Hem</a>
          <div class="relative group">
            <button class="text-slate-300 hover:text-white transition-colors flex items-center">
              Tjänster 
              <svg class="ml-1 h-4 w-4 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
              </svg>
            </button>
            <ul class="absolute left-0 mt-2 w-48 bg-slate-800 rounded-lg shadow-lg py-1
                       invisible opacity-0 group-hover:visible group-hover:opacity-100 transition-all duration-200 ease-in-out
                       transform translate-y-2 group-hover:translate-y-0">
              <li><a href="/tjanster/it-support" class="block px-4 py-2 text-slate-300 hover:bg-slate-700 hover:text-white transition-colors">IT-Support</a></li>
              <li><a href="/tjanster/ikt-pedagogik" class="block px-4 py-2 text-slate-300 hover:bg-slate-700 hover:text-white transition-colors">IKT-Pedagogik</a></li>
              <li><a href="/tjanster/webbdesign" class="block px-4 py-2 text-slate-300 hover:bg-slate-700 hover:text-white transition-colors">Webbdesign & Grafisk Design</a></li>
            </ul>
          </div>
          <a href="/blogg" class="text-slate-300 hover:text-white transition-colors">Nyheter & Insikter</a>
          <a href="/om-mig" class="text-slate-300 hover:text-white transition-colors">Om mig</a>
          <a href="/kontakt" class="text-slate-300 hover:text-white transition-colors">Kontakt</a>
        </div>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-button" class="md:hidden text-slate-300 hover:text-white focus:outline-none p-2 rounded-md bg-slate-800/90 border border-slate-700">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
      </nav>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden fixed inset-0 bg-slate-900 z-40 flex flex-col items-center overflow-y-auto py-16">
        <button id="close-menu-button" class="absolute top-4 right-4 text-slate-300 hover:text-white">
          <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        <a href="/" class="block py-3 text-xl text-slate-300 hover:text-white transition-colors">Hem</a>
        <div class="relative group text-center">
          <button id="mobile-services-toggle" class="py-3 text-xl text-slate-300 hover:text-white transition-colors flex items-center">
            Tjänster 
            <svg class="ml-1 h-5 w-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
              <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
            </svg>
          </button>
          <ul id="mobile-services-menu" class="hidden bg-slate-800 rounded-lg shadow-lg py-1 mt-1">
            <li><a href="/tjanster/it-support" class="block px-4 py-2 text-slate-300 hover:bg-slate-700 hover:text-white transition-colors">IT-Support</a></li>
            <li><a href="/tjanster/ikt-pedagogik" class="block px-4 py-2 text-slate-300 hover:bg-slate-700 hover:text-white transition-colors">IKT-Pedagogik</a></li>
            <li><a href="/tjanster/webbdesign" class="block px-4 py-2 text-slate-300 hover:bg-slate-700 hover:text-white transition-colors">Webbdesign & Grafisk Design</a></li>
          </ul>
        </div>
        <a href="/blogg" class="block py-3 text-xl text-slate-300 hover:text-white transition-colors">Nyheter</a>
        <a href="/om-mig" class="block py-3 text-xl text-slate-300 hover:text-white transition-colors">Om mig</a>
        <a href="/kontakt" class="block py-3 text-xl text-slate-300 hover:text-white transition-colors">Kontakt</a>
      </div>
    </header>

    <main class="pt-20">
      <slot />
    </main>

    <footer class="mt-20 border-t border-slate-700 py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
          <!-- Logga -->
          <div class="flex flex-col items-center md:items-start gap-2">
            <img src="/images/logo.png" alt="Flowlearn Logo" class="h-[4.45rem] w-auto" />
            <p class="text-slate-300 text-sm italic text-center md:text-left max-w-[220px] leading-snug">Jag förenklar din digitala vardag, med människan i fokus.</p>
          </div>
          
          <!-- Sidlänkar -->
          <div class="flex flex-col items-center md:items-center gap-2">
            <h3 class="text-white font-semibold text-lg mb-2">Sidor</h3>
            <div class="grid grid-cols-2 gap-x-8 gap-y-2">
              <a href="/" class="text-slate-300 hover:text-white transition-colors text-sm">Hem</a>
              <a href="/tjanster/it-support" class="text-slate-300 hover:text-white transition-colors text-sm">IT-Support</a>
              <a href="/tjanster/ikt-pedagogik" class="text-slate-300 hover:text-white transition-colors text-sm">IKT-Pedagogik</a>
              <a href="/tjanster/webbdesign" class="text-slate-300 hover:text-white transition-colors text-sm">Webbdesign</a>
              <a href="/om-mig" class="text-slate-300 hover:text-white transition-colors text-sm">Om mig</a>
              <a href="/blogg" class="text-slate-300 hover:text-white transition-colors text-sm">Nyheter</a>
              <a href="/kontakt" class="text-slate-300 hover:text-white transition-colors text-sm">Kontakt</a>
            </div>
          </div>
          
          <!-- Kontaktuppgifter -->
          <div class="flex flex-col items-center md:items-end gap-2">
            <h3 class="text-white font-semibold text-lg mb-2">Kontakta mig</h3>
            <p class="text-slate-300 text-sm">E-post: it@flowlearn.se</p>
            <p class="text-slate-300 text-sm">Telefon: 072-228 00 13</p>
          </div>
        </div>
        
        <!-- Copyright och länkar längst ner -->
        <div class="border-t border-slate-700 pt-6">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <p class="text-slate-300 text-sm mb-4 md:mb-0">&copy; 2025. Alla rättigheter förbehållna.</p>
            <div class="flex gap-4">
              <a href="/integritetspolicy" class="text-slate-300 hover:text-white transition-colors text-sm">Integritetspolicy</a>
              <a href="/anvandarvillkor" class="text-slate-300 hover:text-white transition-colors text-sm">Användarvillkor</a>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>

  <script>
    // Mobile Menu Toggle
    const menuButton = document.getElementById('mobile-menu-button');
    const closeButton = document.getElementById('close-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileServicesToggle = document.getElementById('mobile-services-toggle');
    const mobileServicesMenu = document.getElementById('mobile-services-menu');

    menuButton?.addEventListener('click', () => {
      mobileMenu?.classList.remove('hidden');
      window.scrollTo(0, 0); // Scroll to top when opening mobile menu
      // Prevent body scrolling when menu is open
      document.body.style.overflow = 'hidden';
    });

    closeButton?.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      mobileServicesMenu?.classList.add('hidden'); // Close submenu if open
      document.body.style.overflow = 'auto'; // Allow body scrolling when menu is closed
    });

    mobileServicesToggle?.addEventListener('click', (e) => {
      e.preventDefault();
      mobileServicesMenu?.classList.toggle('hidden');
    });

    // Close menu when clicking outside
    document.addEventListener('click', (event) => {
      if (!mobileServicesToggle?.contains(event.target as Node) && !mobileServicesMenu?.contains(event.target as Node)) {
        mobileServicesMenu?.classList.add('hidden');
      }
    });

    // Header background on scroll
    const header = document.querySelector('header');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 10) {
        header?.classList.add('bg-slate-900/80', 'backdrop-blur-sm');
      } else {
        header?.classList.remove('bg-slate-900/80', 'backdrop-blur-sm');
      }
    });
  </script>
</html>
